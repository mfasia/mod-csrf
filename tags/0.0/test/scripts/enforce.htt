#
# Test id enforcement
#

INCLUDE scripts/ports

CLIENT

# get id

_REQ 127.0.0.1 $PORT_BASE
__GET /htt/index.html HTTP/1.1
__Host: 127.0.0.1:$PORT_BASE
__
_MATCH headers "Set-Cookie: csrfuid=(.*); Path" cookie
_MATCH body "csrfInsert\(\"csrfpId\", \"(.*)\"\);" csrfpid
_WAIT

# no id

_REQ 127.0.0.1 $PORT_BASE
__GET /htt/index.html?query=1234 HTTP/1.1
__Host: 127.0.0.1:$PORT_BASE
__
_EXPECT . "Forbidden"
_WAIT
_CLOSE
_SLEEP 200
_EXPECT EXEC "mod_csrf\(020\): request denied, no 'csrfpId' parameter in request"
_EXEC tail -1 logs/error_log

_REQ 127.0.0.1 $PORT_BASE
__POST /htt/index.html HTTP/1.1
__Host: 127.0.0.1:$PORT_BASE
__Cookie: csrfuid=$cookie
__Content-Type: application/x-www-form-urlencoded
__Content-Length: AUTO
__
_-query=1234
_EXPECT . "Forbidden"
_WAIT
_CLOSE
_SLEEP 200
_EXPECT EXEC "mod_csrf\(020\): request denied, no 'csrfpId' parameter in request"
_EXEC tail -1 logs/error_log

# wrong content (due to missing user tracking cookie)

_REQ 127.0.0.1 $PORT_BASE
__GET /htt/index.html?query=1234&csrfpId=$csrfpid HTTP/1.1
__Host: 127.0.0.1:$PORT_BASE
__
_EXPECT . "Forbidden"
_WAIT
_CLOSE
_SLEEP 200
_EXPECT EXEC "mod_csrf\(020\): request denied, invalid id"
_EXEC tail -1 logs/error_log

# expired id

_REQ 127.0.0.1 $PORT_BASE
__GET /htt/index.html?query=1234&csrfpId=WnAt3u0t9YL01iRa3FvcpsGxHi0zy1xwKOenYTF5ay7KtjjcdH5IY85HhJ9zpqufNPdZutUNyZjOQzBsvEsAoNAGZ-E-8qvo HTTP/1.1
__Host: 127.0.0.1:$PORT_BASE
__Cookie: csrfuid=$cookie
__
_EXPECT . "Forbidden"
_WAIT
_CLOSE
_SLEEP 200
_EXPECT EXEC "mod_csrf\(020\): request denied, expired id"
_EXEC tail -1 logs/error_log

# valid id

_REQ 127.0.0.1 $PORT_BASE
__GET /htt/index.html?query=1234&csrfpId=$csrfpid HTTP/1.1
__Host: 127.0.0.1:$PORT_BASE
__Cookie: csrfuid=$cookie
__
_EXPECT . "200 OK"
_WAIT

_REQ 127.0.0.1 $PORT_BASE
__POST /htt/index.html HTTP/1.1
__Host: 127.0.0.1:$PORT_BASE
__Cookie: csrfuid=$cookie
__Content-Type: application/x-www-form-urlencoded
__Content-Length: AUTO
__
_-query=1234&csrfpId=$csrfpid
_EXPECT . "200 OK"
_WAIT


END

SERVER $PORT_BASE1

# initial page

_RES
_WAIT
__HTTP/1.1 200 OK
__Content-Type: text/html
__Content-Length: AUTO
__
__<html>
__<head>
__<title>htt</title>
__</head>
__<body>
__<p>htt</p>
__</body>
__</html>
_CLOSE

# valid requests

_RES
# id has been removed
_EXPECT . "query=1234"
_EXPECT . "!csrfpId"
_WAIT
__HTTP/1.1 200 OK
__Content-Type: text/html
__Content-Length: AUTO
__
__<html>
__<head>
__<title>htt</title>
__</head>
__<body>
__<p>htt</p>
__</body>
__</html>

_RES
_EXPECT . "query=1234"
_EXPECT . "!csrfpId"
_WAIT
__HTTP/1.1 200 OK
__Content-Type: text/html
__Content-Length: AUTO
__
__<html>
__<head>
__<title>htt</title>
__</head>
__<body>
__<p>htt</p>
__</body>
__</html>

END
